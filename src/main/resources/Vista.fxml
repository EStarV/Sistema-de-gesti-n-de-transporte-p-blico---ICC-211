<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectofinalicc211.view.VistaPrincipal">

    <top>
        <VBox spacing="0">
            <!-- MENU PRINCIPAL -->
            <MenuBar style="-fx-background-color: #2c3e50;">
                <Menu style="-fx-text-fill: white; -fx-font-weight: bold;" text=" Paradas ">
                    <MenuItem onAction="#abrirAddParada" text="Agregar Parada" />
                    <MenuItem onAction="#abrirModifParada" text="Modificar Parada" />
                    <MenuItem onAction="#abrirElimParada" text="Eliminar Parada" />
                </Menu>
                <Menu style="-fx-text-fill: white; -fx-font-weight: bold;" text=" Rutas ">
                    <MenuItem onAction="#abrirAddRuta" text="Agregar Ruta" />
                    <MenuItem onAction="#abrirModifRuta" text="Modificar Ruta" />
                    <MenuItem onAction="#abrirElimRuta" text="Eliminar Ruta" />
                </Menu>
                <Menu style="-fx-text-fill: white; -fx-font-weight: bold;" text=" Búsqueda ">
                    <MenuItem onAction="#abrirDijkstra" text="Búsqueda Avanzada (Dijkstra)" />
                    <MenuItem onAction="#abrirFloyd" text="Búsqueda Avanzada (Floyd-Warshall)" />
                </Menu>
                <Menu style="-fx-text-fill: white; -fx-font-weight: bold;" text=" Ayuda ">
                    <MenuItem onAction="#mostrarAcercaDe" text="Acerca de" />
                </Menu>
            </MenuBar>

            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20; -fx-background-color: #34495e;">
                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Origen:" />
                <ComboBox fx:id="cbOrigen" prefWidth="180" />
                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Destino:" />
                <ComboBox fx:id="cbDestino" prefWidth="180" />
                <Label style="-fx-text-fill: white;" text="Optimizar por:" />
                <ChoiceBox fx:id="cbParametro" prefWidth="130" />
                <Label style="-fx-text-fill: white;" text="Algoritmo:" />
                <ChoiceBox fx:id="cbAlgorithm" prefWidth="130" />
                <Button onAction="#calcularRuta" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="CALCULAR RUTA" />
            </HBox>
        </VBox>
    </top>

    <center>
        <Pane fx:id="mapaPane" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2;" />
    </center>

    <bottom>
        <Label fx:id="lblEstado" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12;" text="Sistema listo - Paradas cargadas" />
    </bottom>
</BorderPane>
